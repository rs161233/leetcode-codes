import java.util.*;

class Main {
    public static void main(String[] args) {
        String str = "akash ks";
        
        System.out.println("First Non-Repeating Char From String: " + 
            fistNonRepeatingCharFromString(str.toLowerCase()));
    }   
    
    public static char fistNonRepeatingCharFromString(String str) {
        // ✅ Edge cases
        if (str == null || str.length() == 0) return 0;
        if (str.length() == 1) return str.charAt(0);

        // ✅ Current Approach (Brute Force) – O(n^2) time
        int count;
        for (int i = 0; i < str.length(); i++) {
            count = 0;
            for (int j = 0; j < str.length(); j++) {
                if (str.charAt(i) == str.charAt(j)) {
                    count++;
                }
            }
            if (count == 1) return str.charAt(i);
        }
        return 0;

        /*
        ✅ Suggestion 1: Use HashMap for O(n) time
        Map<Character, Integer> map = new LinkedHashMap<>(); // keeps insertion order
        for (char c : str.toCharArray()) {
            map.put(c, map.getOrDefault(c, 0) + 1);
        }
        for (Map.Entry<Character, Integer> entry : map.entrySet()) {
            if (entry.getValue() == 1) return entry.getKey();
        }
        return 0;
        */

        /*
        ✅ Suggestion 2: Use Frequency Array (best when only lowercase letters a-z)
        int[] freq = new int[26];
        for (char c : str.toCharArray()) {
            freq[c - 'a']++;
        }
        for (char c : str.toCharArray()) {
            if (freq[c - 'a'] == 1) return c;
        }
        return 0;
        */
    }
}
